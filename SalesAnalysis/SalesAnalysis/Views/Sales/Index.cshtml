<script>
    $(document).ready(function ()
    {
        $("#datefrom").datepicker({
            //dateFormat: "dd/mm/yy",
            showButtonPanel: true,
            defaultDate: "-1m",
            changeMonth: true,
            numberOfMonths: 1,
            onClose: function (selectedDate) {
                $("#dateto").datepicker("option", "minDate", selectedDate);
            }
        });
        $("#dateto").datepicker({
            //dateFormat: "dd/mm/yy",
            showButtonPanel: true,
            defaultDate: new Date(),
            changeMonth: true,
            numberOfMonths: 1,
            onClose: function (selectedDate) {
                $("#datefrom").datepicker("option", "maxDate", selectedDate);
            }
        });
    });
</script>


<script type="text/javascript">
    $(document).ready(function ()
    {
        $("#ManagerId").change(function () {
            setfilter();
        });

        $("#ClientId").change(function () {
            setfilter();
        });

        $("#ProductId").change(function () {
            setfilter();
        });

        $("#datefrom").change(function () {
            setfilter();
        });

        $("#dateto").change(function () {
            setfilter();
        });

        function setfilter() {
            $.ajax({
                type: 'GET',
                url: "@Url.Content("/Sales/SalesFiltered/")",
                dataType: 'html',
                data: {
                    managerId: $("#ManagerId option:selected").val(),
                    clientId: $("#ClientId option:selected").val(),
                    productId: $("#ProductId option:selected").val(),
                    dateFrom: $("#datefrom").val(),
                    dateTo: $("#dateto").val()
                },
                success: function (result) {
                    $('#salesfiltered').html(result)
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(thrownError);
                }
            });
        }
    });
</script>
